<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.ravit.pomodorotaskapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Select Work/Break/Long Break, to start the timer "
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="40dp"
        android:text="00:00"/>

    <ImageButton
        android:id="@+id/imageButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/play1" />


    <TextView
        android:id="@+id/what"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:hint="Set tag"

        android:textColorHint="@color/colorPrimary"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/focustv"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:text="00:00"
            android:layout_marginLeft="125dp"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/sbreaktv"
            android:layout_width="97dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="00:00"
            android:layout_marginLeft="35dp"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/lbreaktv"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginLeft="35dp"
            android:text="00:00"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="105dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:background="@drawable/laptop" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="97dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/coffee" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="100dp"
            android:layout_height="118dp"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:background="@drawable/break1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:gravity="right">

        <Button
            android:id="@+id/settings"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="right"
            android:background="@drawable/button_bg_round"
            android:layout_marginRight="5dp"
            android:textColor="#bababa"
            android:textSize="15dp" />

    </LinearLayout>

